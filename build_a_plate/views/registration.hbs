<div class="container_registration">
  <h1>Build A plate</h1>
  <h2> Registration From</h2>
  <div class="form-wrapper">
    <form action="/register" method="POST">

      <div class="form-item">
        <label for="fullname">Name:</label>
        <input type="text" name="fullname" id="fullname" placeholder="Full Name" required>
      </div>

      <hr>
      <h3>Address</h3>
      <div class="form-item">
        <label for="address">Address:</label>
        <input type="text" name="address" id="address" placeholder="Address" required>
      </div>
      <div class="form-item">
        <label for="pcity">City:</label>
        <input type="text" name="pcity" id="pcity" placeholder="City" required>
      </div>
      <div class="form-item">
        <label for="pstate">Province:</label>
        <input type="text" name="pstate" id="pstate" placeholder="Province" required>
      </div>
      <div class="form-item">
        <label for="country">Country:</label>
        <input type="text" name="country" id="country" placeholder="Country" required>
      </div>
      <div class="form-item">
        <label for="pzip">Zip Code:</label>
        <input type="text" name="pzip" id="pzip" placeholder="Zip Code" required>
      </div>
      <div class="form-item">
        <label for="email">E-mail:</label>
        <input type="email" name="email" id="email" placeholder="email@xyz.com" required>
      </div>
      <div class="form-item">
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" placeholder="AaBb1!@#$%^&*" required>
      </div>
      <div class="form-item">
        <label for="pphonenumber">Tel/Mobile:</label>
        <input type="tel" name="pphonenumber" id="pphonenumber" placeholder="XXX XXX XXXX" required>
      </div>
      <input class="register" type="submit" value="Register" />

    </form>
  </div>

</div>