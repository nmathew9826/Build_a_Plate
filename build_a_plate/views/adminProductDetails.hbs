<div class="row">
    <main class="col-md-12">
        <div class="row">

            <div class="col-md-4">
                <h3 style="font-size: 250px;color: #444;" class="text-center"><i class="fa fa-cutlery"></i></h3>
            </div>

            <div class="col-md-8">
                <form method="post" action="/product/update/{{product._id}}">
                    <div class="row">

                        <div class="col-md-12">
                            <label>Product Name:</label>
                            <h1><input class="form-control" name="product_name" type="text"
                                    value="{{product.product_name}}" /></h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Product description:</label>
                            <p><textarea class="form-control" name="product_description"
                                    type="text" />{{product.product_description}}</textarea> </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Ingredients:</label>
                            <div class="row">

                                {{#with product}}
                                {{#each ingredients}}
                                <div class="col-md-6">

                                    <p><input class="form-control" name="name" type="text" value="{{name}}" disabled /></p>
                                </div>
                                <div class="col-md-6">

                                    <p><b><input class="form-control" name="quantity" type="text"
                                                value="{{quantity}}" disabled/></b></p>
                                </div>
                                {{/each}}
                                {{/with}}
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <h6></h6><label>Price:</label><b>$<input class="form-control" name="product_price"
                                            type="text" value="{{product.product_price}}" /></b></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="submit" value="update product">
                </form>
            </div>
    </main>
</div>