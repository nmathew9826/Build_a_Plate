<div>
    <main class="col-md-12">
        <br>
        <h2>Update Profile</h2>
        <hr />
        <form method="post" action="/userProfile/update">
            <legend>Profile Information</legend>
            <fieldset class="userDetails">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Name:</label>
                            <input class="form-control" name="userName" type="text" value="{{person_name}}" readOnly = "true" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input class="form-control" name="id" type="hidden" value="{{_id}}" readOnly = "true" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" name="email" type="email" value="{{person_email}}" readOnly = "true" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Phone Number:</label>
                            <input class="form-control" name="phone" value="{{person_phone}}" type="phone" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address(Street):</label>
                            <input class="form-control" name="addressStreet" value="{{person_address}}" type="text"/>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address(City):</label>
                            <input class="form-control" name="addressCity" value="{{city}}" type="text" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address(Province):</label>
                            <input class="form-control" name="addressProvince" value="{{province}}" type="text" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Postal code:</label>
                            <input class="form-control" name="addressPostalCode" value="{{postal_code}}" type="text" />
                        </div>
                    </div>
                </div>
                 <input type="submit" class="fadeIn fourth" value="Update">
            </fieldset>
            <hr />
        </form>
    </main>
</div>